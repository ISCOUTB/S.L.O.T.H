{
    "extends": "@etl-design/tools-tsconfig/tsconfig.json",
    "compilerOptions": {
        "target": "es2022",
        "module": "esnext",
        "moduleResolution": "bundler",
        "paths": {
            "@/*": ["./src/*"],
            "@@/*": ["./*"]
        },
        "types": ["node"],
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "exclude": ["tsup.config.ts"]
}
