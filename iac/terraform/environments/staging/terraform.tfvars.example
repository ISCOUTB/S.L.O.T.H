# ============================================
# Staging Environment Configuration
# ============================================

# Environment name (used for tagging and naming resources)
environment = "staging"

# Project name (used as prefix for all resources)
project_name = "etl-design"

# ============================================
# Cluster Configuration
# ============================================

# Number of manager nodes (must be odd: 1, 3, 5)
# For staging, 1 manager is sufficient
manager_count = 1

# Number of worker nodes
# For staging, 1-2 workers are enough for testing
worker_count = 2

# ============================================
# EC2 Instance Configuration
# ============================================

# Instance type (t3.micro is free tier eligible)
# Options: t3.micro, t3.small, t3.medium
instance_type = "t3.micro"

# ============================================
# Network Configuration
# ============================================

# VPC CIDR block (shouldn't conflict with other VPCs)
vpc_cidr = "10.0.0.0/16"

# Availability zones to use
# Uses two AZs for basic high availability
availability_zones = [
  "us-east-1a",
  "us-east-1b"
]

# ============================================
# Security Configuration
# ============================================

# IMPORTANT: Replace with your actual public IP for SSH access
# Get your IP: curl ifconfig.me
# Format: "YOUR_IP/32" for single IP or "0.0.0.0/0" for anywhere (not recommended)
allowed_ssh_cidr = ["AAA.BBB.CCC.DDD/32"]

# ============================================
# Additional Tags
# ============================================

# Custom tags to apply to all resources
tags = {
  Team        = "DevOps"
  CostCenter  = "Engineering"
  ManagedBy   = "Terraform"
  Purpose     = "Staging Environment for ETL Design Project"
}